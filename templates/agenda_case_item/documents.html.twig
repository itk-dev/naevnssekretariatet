{% extends 'layout-with-agenda-case-item-submenu.html.twig' %}

{% trans_default_domain 'agenda_item' %}

{% block title %}{% trans %}Attached documents{% endtrans %}{% endblock %}

{% block header %}
    <div class="row">
        <div class="col">
            <h1>{% trans %}Attached documents{% endtrans %}</h1>
            <p class="text-muted"><small>{% trans %}Documents that are already attached to agenda item{% endtrans %}</small></p>
        </div>
        <div class="col-auto">
            <a name="" id="" class="btn btn-primary {% if is_finished_agenda %} disabled {% endif %}" href="{{ url('agenda_case_item_document_attach', {id: agenda.id, agenda_item_id: agenda_item.id}) }}" role="button">{% trans %}Attach documents{% endtrans %}</a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <main role="main" class="col-12 mt-3">
        <div class="table-responsive-sm"></div>
        <table class="table table-striped border">
            <thead>
            <tr>
                <th>{% trans %}Document name{% endtrans %}</th>
                <th>{% trans %}Document type{% endtrans %}</th>
                <th>{% trans %}Uploaded by{% endtrans %}</th>
                <th>{% trans %}Upload date{% endtrans %}</th>
                <th class="text-right">{% trans %}Functions{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>

            {% for document in documents %}
                <tr>
                    <td>{{ document.documentName|e }}</td>
                    <td>{{ document.type|e }}</td>
                    <td>{{ document.uploadedBy|e }}</td>
                    <td>{{ document.uploadedAt|date('d/m/Y') }}</td>
                    <td class="text-right">
                        <div class="btn-group" role="group" aria-label="{% trans %}List functions{% endtrans %}">
                            <!-- Delete button -->
                            {% if not is_finished_agenda %}
                            <form id="myform" class="" method="post" action="{{ path('agenda_case_item_document_delete', {'id': agenda.id, 'agenda_item_id': agenda_item.id, 'document_id': document.id}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
                                <button class="btn btn-danger" data-toggle="tooltip" data-placement="auto" title="{% trans %}Delete document{% endtrans %}"><i class="fas fa-trash-alt"></i></button>
                            </form>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}