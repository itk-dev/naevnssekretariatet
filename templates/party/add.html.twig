{% extends 'layout-with-case-submenu.html.twig' %}

{% trans_default_domain 'party' %}


{% block title %}{% trans %}Add Party{% endtrans %}{% endblock %}


{% block header %}
    <div class="row">
        <div class="col">
            <h1>{% trans %}Add party to case{% endtrans %}</h1>
        </div>
        <div class="col-auto">
            <a class="btn btn-primary" href="{{ url('party_add_from_index', {id: case.id}) }}" role="button">{% trans %}Add from index{% endtrans %}</a>
            <a class="btn btn-secondary" href="{{ url('case_show', {id: case.id}) }}" role="button">{% trans %}Cancel{% endtrans %}</a>

        </div>
    </div>
{% endblock %}

{% block content %}

    <main role="main" class="col-12 mt-3">
        {{ form_start(add_party_form) }}
        {{ form_errors(add_party_form) }}
        <div class="form-row">
            <div class="col-md-6 mb-3">
                {{ form_row(add_party_form.identification) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                {{ form_row(add_party_form.lookupIdentifier) }}
            </div>
            <div class="col-md-6 mb-3">
                <p id="isUnderAddressProtectionParagraph" style="visibility: {{ add_party_form.isUnderAddressProtection.vars.checked ? 'visible' : 'hidden' }}">
                    <span class="badge badge-pill badge-danger" title="{% trans from 'case' %}Party is under address protection{% endtrans %}">!</span>
                    {% trans from 'case' %}Party is under address protection{% endtrans %}
                </p>
                {{ form_row(add_party_form.isUnderAddressProtection) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                {{ form_row(add_party_form.name) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(add_party_form.phoneNumber) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12 mb-3">
                {{ form_row(add_party_form.address) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12 mb-3">
                {{ form_row(add_party_form.type) }}
            </div>
        </div>
        <button class="btn btn-success float-right" type="submit" name="submit">{% trans %}Add party{% endtrans %}</button>
        {{ form_end(add_party_form) }}
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('party_identification_lookup') }}
    {{ encore_entry_script_tags('identification_type_handler') }}
    {{ encore_entry_script_tags('dawa-address-lookup') }}
{% endblock %}
