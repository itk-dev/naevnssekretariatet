{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% block navbar %}
        {% include 'navbar/navbar.html.twig' %}
    {% endblock %}
    <div class="container-fluid">
      <div class="row">
        {% block sidebar %}
            {% block sidebarMenu %}
              <nav id="sidebarMenu" role="nav" class="col-auto d-md-block bg-dark sidebar collapse">
                <div class="bg-dark">
                  <ul class="nav flex-column">
                    {% include 'sidebar/sidebar-menu.html.twig' with menu %}
                  </ul>
                </div>
              </nav>
            {% endblock %}
        {% endblock %}
        <div class="col ml-sm-auto ml-md-5 px-md-4">
          {# <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"> #}
          <header class="pt-3">
            {% block header %}{% endblock %}
          </header>
          <div class="row pb-2 mb-3">
            {% block content %}{% endblock %}
          </div>
          {# </div> #}
        </div>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}