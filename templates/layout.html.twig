{% extends 'base.html.twig' %}


{% set menu = [
  {
    "name": "Dashboard",
    "tooltip": "Go to dashboard",
    "link": "#",
    "icon": "tachometer-alt"
  },
  {
    "name": "Case list",
    "tooltip": "Go to case list",
    "link": "#",
    "icon": "list"
  },
  {
    "name": "Agenda",
    "tooltip": "Go to Agendas",
    "link": "#",
