{% extends 'layout.html.twig' %}

{% trans_default_domain 'agenda' %}

{% block title %}{% trans %}Agendas{% endtrans %}{% endblock %}

{% block header %}
    <div class="row">
        <div class="col">
            <h1>{% trans %}Agendas{% endtrans %}</h1>
        </div>
        {% if not is_granted('ROLE_BOARD_MEMBER') %}
            <div class="col-auto">
                <a name="" id="" class="btn btn-success" href="create" role="button">{% trans %}Create agenda{% endtrans %}</a>
            </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-3">
            {{ form(municipality_form) }}
        </div>
    </div>
{% endblock %}

{% block content %}
    <main role="main" class="col-12 mt-3">
        <form id="filter_form11" method="get" action="." class="form">
            {{ form_start(filter_form) }}
            <div class="row no-gutters">
                <div class="col-auto">
                    {{ form_widget(filter_form.board) }}
                </div>
                <div class="col-auto ml-2">
                    {{ form_widget(filter_form.date) }}
                </div>
                <div class="col-auto ml-2">
                    {{ form_widget(filter_form.status) }}
                </div>
                <div class="col-auto ml-2">
                    {# Todo: Just reset filter rather than refresh page although it yields the same result #}
                    <a name="" id="" class="btn btn-secondary" href="{{ path('agenda_index') }}" role="button">{% trans %}Reset{% endtrans %}</a>
                </div>
            </div>
            {{ form_rest(filter_form) }}
        </form>

        <div id="js-process-spinner" class="spinner-border spinner-border-sm" style="display: none" role="status">
            <span class="sr-only">Loading</span>
        </div>

        <div class="table-responsive-sm mt-3 js-process-table-results">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th{% if pagination.isSorted('a.Board') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Board'|trans({}, 'agenda'), 'board.name') }}
                    </th>
                    <th{% if pagination.isSorted('a.Date') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Date'|trans({}, 'agenda'), 'a.date') }}
                    </th>
                    <th scope="col">{% trans %}From{% endtrans %}</th>
                    <th scope="col">{% trans %}To{% endtrans %}</th>
                    <th{% if pagination.isSorted('a.Status') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Status'|trans({}, 'agenda'), 'a.status') }}
                    </th>
                    <th class="text-right" scope="col" data-orderable="false">{% trans %}Function{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for agenda in pagination %}
                    <tr>
                        <td>{{ agenda.board|e }}</td>
                        <td>{{ agenda.date is empty ? "" : agenda.date|date('j F Y') }}</td>
                        <td>{{ agenda.start is empty ? "" : agenda.start|date('H:i') }}</td>
                        <td>{{ agenda.end is empty ? "" : agenda.end|date('H:i') }}</td>
                        <td>{{ agenda.status|trans({}, 'agenda_status') }}</td>
                        <td class="text-right">
                            <div class="btn-group" role="group" aria-label="{% trans %}List functions{% endtrans %}">
                                <!-- Show button -->
                                <a href="{{ url('agenda_show', {id: agenda.id}) }}" role="button" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="{% trans %}Show agenda{% endtrans %}"><i class="fas fa-eye"></i><span class="sr-only">{% trans %}Show agenda{% endtrans %}</span></a>
                                {% if not is_granted('ROLE_BOARD_MEMBER') %}
                                    <!-- Delete button -->
                                    {% if agenda.isFinished() %}
                                        <button class="btn btn-danger" disabled data-toggle="tooltip" data-placement="auto" title="{% trans %}Cannot delete finished agenda{% endtrans %}"><i class="fas fa-trash-alt"></i></button>
                                    {% elseif agenda.agendaItems|length > 0 %}
                                        <button class="btn btn-danger" disabled data-toggle="tooltip" data-placement="auto" title="{% trans %}Cannot delete agenda containing agenda items{% endtrans %}"><i class="fas fa-trash-alt"></i></button>
                                    {% else %}
                                    <form id="myform" class="btn-group" method="post" action="{{ path('agenda_delete', {'id': agenda.id}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to delete this agenda?{% endtrans %}');">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ agenda.id) }}">
                                        <button class="btn btn-danger" data-toggle="tooltip" data-placement="auto" title="{% trans %}Delete agenda{% endtrans %}"><i class="fas fa-trash-alt"></i></button>
                                    </form>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {# display navigation #}
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </main>

    {% if not is_granted('ROLE_BOARD_MEMBER') %}
        <footer class="col-12 mt-3">
            <div class="row">
                <div class="col-auto ml-auto">
                    <a name="" id="" class="btn btn-success" href="create" role="button">{% trans %}Create agenda{% endtrans %}</a>
                </div>
            </div>
        </footer>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('agenda_filter') }}
    {{ encore_entry_script_tags('municipality_select') }}
{% endblock %}
