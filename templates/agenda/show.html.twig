{% extends 'layout-with-agenda-submenu.html.twig' %}

{% trans_default_domain 'agenda' %}

{% block title %}{% trans %}Agenda{% endtrans %}{% endblock %}

{% block header %}
    <div class="row">
        <div class="col">
            <h1>{% trans %}Agenda{% endtrans %}</h1>
        </div>
        <div class="col-auto">
            {# TODO: Needs functionality on buttons #}
            <a name="" id="" class="btn btn-success" href="#" role="button">{% trans %}Publish to boardmembers{% endtrans %}</a>
{#            <a name="" id="" class="btn btn-primary" href="#" role="button">{% trans %}Save changes{% endtrans %}</a>#}
        </div>
    </div>
{% endblock %}

{% block content %}
    <main role="main" class="col-12 mt-3">
        {{ form_start(agenda_form) }}
        <div class="form-row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="">{% trans %}Board{% endtrans %}</label>
                    {{ form_widget(agenda_form.board, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="">{% trans %}Select recipient(s) {% endtrans %}</label>
                    {{ form_widget(agenda_form.status, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div>
            <label for="">{% trans %}Remarks{% endtrans %}</label>
            {{ form_widget(agenda_form.remarks, {'attr': {'class': 'form-control', 'rows': 3}}) }}
        </div>

        <div class="form-row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="">{% trans %}Date{% endtrans %}</label>
                    {{ form_widget(agenda_form.date) }}
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="">{% trans %}From{% endtrans %}</label>
                    {{ form_widget(agenda_form.start, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="">{% trans %}To{% endtrans %}</label>
                    {{ form_widget(agenda_form.end, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div>
            <button class="btn btn-primary float-right">{{ button_label|default('Save changes') }}</button>
        </div>
        {{ form_end(agenda_form) }}


        <div class="form-row">
            <div class="col-md-7 mt-5">
                <div class="form-group">
                    <label for="">{% trans %}Agenda items{% endtrans %}</label>
                    <a name="" id="" class="btn btn-success btn-sm" style="float: right;" href="#" role="button">{% trans %}Add agenda item{% endtrans %}</a>
                    <hr style="width:100%">
                </div>
            </div>

            {% set boardmembers = [
                {
                    "name": "Jacob Jul Jørgensen",
                    "position": "Fuldmægtig i nævn"
                },
                {
                    "name": "Jette Jespersen",
                    "position": "Fuldmægtig i nævn"
                },
                {
                    "name": "Jeppe Andersen",
                    "position": "Fuldmægtig i nævn"
                },
                {
                    "name": "Birthe Jensen",
                    "position": "Fuldmægtig i nævn"
                },
                {
                    "name": "Katarina Nielsen",
                    "position": "Fuldmægtig i nævn"
                },
                {
                    "name": "Jens Kristian Olsen",
                    "position": "Fuldmægtig i nævn"
                },
            ] %}
            <div class="col-md-5 mt-5">
                <div class="form-group">
                    <label for="">{% trans %}Boardmembers{% endtrans %}</label>
                    <a name="" id="" class="btn btn-success btn-sm" href="#" style="float: right;" role="button">{% trans %}Add board member{% endtrans %}</a>
                    <hr style="width:100%">
                    {% for boardmember in boardmembers %}
                        <div>
                            <p class="m-0 mt-2">{{ boardmember.name|e }}</p>
                            <p class="m-0" style="font-size:15px; opacity: 0.5">{{ boardmember.position|e }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>


    <footer class="col-12 mt-3">
        <div class="row">
            <div class="col-auto ml-auto">
                {# TODO: Needs functionality on buttons #}
{#                <a name="" id="" class="btn btn-primary" href="#" role="button">{% trans %}Save changes{% endtrans %}</a>#}
            </div>
        </div>
    </footer>
{% endblock %}