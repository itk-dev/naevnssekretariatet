{% extends 'layout-with-case-submenu.html.twig' %}

{% trans_default_domain 'case' %}

{% set createdate = case.createdAt|date('d/m/Y') %}
{% set updatedate = case.updatedAt|date('d/m/Y') %}
{% set assigned_caseworker = case.assignedTo.name ?? 'Unassigned'|trans({}, 'case') %}

{% set caseinfo = [
    {
        "label": "Created by",
        "value": case.complainant
    },
    {
        "label": "Date created",
        "value": createdate
    },
    {
        "label": "Last changed",
        "value": updatedate
    },
    {
        "label": "Assigned to",
        "value": assigned_caseworker
    },
    {
        "label": "Board",
        "value": case.board.name
    },
    {
        "label": "Municipality",
        "value": case.municipality.name
    },
] %}

{% block title %}{% trans %}Casesummary{% endtrans %}{% endblock %}

{% block header %}
    <div class="row">
        <div class="col">
            {# TODO: Heading should not be static :) #}
            <h1>{% trans %}Case{% endtrans %} {{ case.caseNumber }}</h1>
        </div>
        <div class="col-auto">
            {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
                <a class="btn btn-secondary" href="{{ url("case_index") }}" role="button">{% trans %}Back to list{% endtrans %}</a>
                {% if suitable_boards %}
                    <a href="" role="button" class="btn btn-primary" data-toggle="modal" data-target="#move_case" data-placement="auto" title="{% trans %}Move case to different board{% endtrans %}">{% trans %}Move case{% endtrans %}</a>
                {% else %}
                    <button disabled class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="{% trans %}No suitable boards{% endtrans %}">{% trans %}Move case{% endtrans %}</button>
                {% endif %}
                {# TODO: Discuss what should happen with respect to deletion of case #}
                <a class="btn btn-danger" href="#" role="button">{% trans %}Delete case{% endtrans %}</a>

                {{ render(controller('App\\Controller\\CaseController:move', {id: case.id})) }}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block content %}

    <main role="main" class="col-12">
        {{ render(controller(
            'App\\Controller\\CaseProgressController::renderCaseProgressBar', {case: case}
        )) }}

        <section area-labelledby="section_caseinfo" class="mt-5">
            <div class="row">
                <div class="col">
                    <h2 id="section_caseinfo">{% trans %}Caseinfo{% endtrans %}</h2>
                </div>
            </div>
            <div class="row">
                {% for item in caseinfo %}
                    <div class="col">
                        <label for="{{ item.label|e }}">{{ item.label|trans([], 'case', 'da') }}</label>
                        <p class="m-0" id="{{ item.label|e }}"><strong>{{ item.value|e }}</strong></p>
                    </div>
                {% endfor %}
            </div>
        </section>

    {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
            <div class="row mt-md-5">
                <section area-labelledby="section_latest_communication" class="col-md-6 mt-5 mt-md-0">
                    <div class="row">
                        <div class="col">
                            <h2 id="section_latest_communication">{% trans %}Latest communication{% endtrans %}</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="list-group">
                                {% for communication in communications %}
                                    <a href="{{ url("digital_post_show", {id: case.id, 'digitalPost': communication.id}) }}" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <span class="mr-3">{{ communication.createdAt|date('d/m/Y') }}</span>
                                            <p class="mb-1 text-truncate">{{ communication.document.documentName|e }}</p>
                                        </div>
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </section>

                <section area-labelledby="section_latest_notes" class="col-md-6 mt-5 mt-md-0">
                    <div class="row">
                        <div class="col">
                            <h2 id="section_latest_notes">{% trans %}Latest notes{% endtrans %}</h2>
                        </div>
                        <div class="col-auto">
                            <a class="btn btn-success float-right" href={{ url("note_index", {id: case.id, 'showQuickNote': true}) }} role="button">{% trans %}Create new note{% endtrans %}</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="list-group">
                                {% for note in notes %}
                                    {% set note_id = note.id|e %}
                                    <a href="{{ url("note_index", {id: case.id, 'noteShown': note_id}) }}" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <span class="mr-3">{{ note.createdAt|date('d/m/Y') }}</span>
                                            <p class="mb-1 text-truncate">{{ note.subject|e }}</p>
                                        </div>
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            </main>
        {% endif %}
{% endblock %}
