{% trans_default_domain 'case' %}

<main role="main" class="col-12">
    {# TODO: Persist tab navigation in url #}
    <ul class="nav nav-tabs mt-3" id="casestatusTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview" role="tab" aria-controls="overview" aria-selected="true">{% trans %}Overview{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="claim-tab" data-toggle="tab" href="#claim" role="tab" aria-controls="claim" aria-selected="true">{% trans %}Condition{% endtrans %}</a>
        </li>
        {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
            <li class="nav-item">
                <a class="nav-link" id="bringer-tab" data-toggle="tab" href="#bringer" role="tab" aria-controls="bringer" aria-selected="true">{% trans %}Bringer{% endtrans %}</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="neighbour-tab" data-toggle="tab" href="#neighbour" role="tab" aria-controls="neighbour" aria-selected="true">{% trans %}Neighbour{% endtrans %}</a>
            </li>
        {% endif %}
    </ul>
    <div class="tab-content" id="casestatusTabContent">
        <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
            <div class="row mt-3">
                <div class="col">
                    {# TODO: Form validation: https://getbootstrap.com/docs/4.0/components/forms/#validation #}
                    <fieldset>
                        <legend>
                            {% trans %}Bringer{% endtrans %}
                            {% if case.bringerIsUnderAddressProtection %}
                                <p id="bringerIsUnderAddressProtectionCaseShow">!{% trans %}Is under address protection{% endtrans %}!</p>
                            {% endif %}
                        </legend>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputBasicInformation1">{% trans %}Bringer name{% endtrans %}</label>
                                <input type="text" class="form-control" id="inputBasicInformation1" value="{{ case.bringer }}" readonly>
                            </div>
                            {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
                                {% include 'case/_identifier.html.twig' with {case: case, id_property: 'bringerIdentification', address_property: 'bringerAddress', name_property: 'bringer'} %}
                            {% endif %}
                        </div>

                        {% include 'case/_address.html.twig' with {case: case, address_property: 'bringerAddress'} %}
                        <div class="form-group">
                            <label>{% trans %}Cadastral number{% endtrans %}</label>
                            <input type="text" class="form-control" value="{{ case.bringerCadastralNumber }}" readonly>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>
                            {% trans %}Counterpart{% endtrans %}
                            {% if case.accusedIsUnderAddressProtection %}
                                <p id="accusedIsUnderAddressProtectionCaseShow">!{% trans %}Is under address protection{% endtrans %}!</p>
                            {% endif %}
                        </legend>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputBasicInformation3">{% trans %}Counterpart name{% endtrans %}</label>
                                <input type="text" class="form-control" id="inputBasicInformation3" value="{{ case.accused }}" readonly>
                            </div>
                            {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
                                {% include 'case/_identifier.html.twig' with {case: case, id_property: 'accusedIdentification', address_property: 'accusedAddress', name_property: 'accused'} %}
                            {% endif %}
                        </div>

                        {% include 'case/_address.html.twig' with {case: case, address_property: 'accusedAddress'} %}
                        <div class="form-group">
                            <label>{% trans %}Cadastral number{% endtrans %}</label>
                            <input type="text" class="form-control" value="{{ case.accusedCadastralNumber }}" readonly>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>{% trans %}Case specifics{% endtrans %}</legend>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label>{% trans %}Complaint category{% endtrans %}</label>
                                <input type="text" class="form-control" value="{{ case.complaintCategory.name }}" readonly>
                            </div>
                            <div class="form-group col-md-2">
                                <label>{% trans %}KLE{% endtrans %}</label>
                                <input type="text" class="form-control" value="{{ case.complaintCategory.kle }}" readonly>
                            </div>
                            <div class="form-group col-md-2">
                                <label>{% trans %}Complaint fee in DKK{% endtrans %}</label>
                                <input type="text" class="form-control" value="{{ case.complaintCategory.fee }}" readonly>
                            </div>
                            <div class="form-group col-md-5">
                                <label>{% trans %}Extra complaint category information{% endtrans %}</label>
                                <input type="text" class="form-control" value="{{ case.extraComplaintCategoryInformation }}" readonly>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="claim" role="tabpanel" aria-labelledby="claim-tab">
            <div class="row mt-3">
                <div class="col">
                    {# TODO: Form validation: https://getbootstrap.com/docs/4.0/components/forms/#validation #}
                    <fieldset>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="inputBasicInformation7">{% trans %}Conditions{% endtrans %}</label>
                                <textarea readonly class="form-control" id="inputBasicInformation7" rows="8">{{ case.conditions }}</textarea>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="inputBasicInformation8">{% trans %}Claim{% endtrans %}</label>
                                <textarea readonly class="form-control" id="inputBasicInformation8" rows="8">{{ case.bringerClaim }}</textarea>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="bringer" role="tabpanel" aria-labelledby="bringer-tab">
            <div class="row mt-3">
                <div class="col">
                    <div class="table-responsive-sm">
                        <table id="basicInformationBringer" class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th scope="col">{% trans %}Name{% endtrans %}</th>
                                <th scope="col">{% trans %}Party type{% endtrans %}</th>
                                <th scope="col">{% trans %}Address{% endtrans %}</th>
                                <th scope="col">{% trans %}Identifier{% endtrans %}</th>
                                <th scope="col">{% trans %}P-number{% endtrans %}</th>
                                <th scope="col">{% trans %}Telephone number{% endtrans %}</th>
                                <th scope="col" data-orderable="false">{% trans %}Function{% endtrans %}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for party_data in parties %}
                                <tr>
                                    <td>
                                        {{ party_data.party.name|e }}
                                        {% if party_data.party.isUnderAddressProtection %}
                                            <p id="partyIsUnderAddressProtectionCaseShow">!{% trans %}Is under address protection{% endtrans %}!</p>
                                        {% endif %}
                                    </td>
                                    <td>{{ party_data.type|e }}</td>
                                    <td>{{ party_data.party.address|e }}</td>
                                    <td>{{ party_data.party.identification.identifier|e }}</td>
                                    <td>{{ party_data.party.identification.pNumber|e }}</td>
                                    <td>{{ party_data.party.phoneNumber|e }}</td>
                                    <td class="text-right">
                                        <!-- Edit button -->
                                        <a href="{{ url("party_edit", {id: case.id, party_id: party_data.party.id}) }}" role="button" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="{% trans %}Edit party{% endtrans %}"><i class="fas fa-file-alt"></i><span class="sr-only">{% trans %}Edit party{% endtrans %} </span></a>

                                        <!-- Delete button -->
                                        <form id="myform" class="btn" style="margin:0; padding:0; display:inline;" method="post" action="{{ path('party_delete', {'id': case.id, 'party_id': party_data.party.id}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ party_data.party.id) }}">
                                            <button class="btn btn-danger" data-toggle="tooltip" data-placement="auto" title="{% trans %}Delete party{% endtrans %}"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="neighbour" role="tabpanel" aria-labelledby="neighbour-tab">
            <div class="row mt-3">
                <div class="col">
                    <div class="table-responsive-sm">
                        <table id="basicInformationNeighbour" class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th scope="col">{% trans %}Name{% endtrans %}</th>
                                <th scope="col">{% trans %}Party type{% endtrans %}</th>
                                <th scope="col">{% trans %}Address{% endtrans %}</th>
                                <th scope="col">{% trans %}Identifier{% endtrans %}</th>
                                <th scope="col">{% trans %}P-number{% endtrans %}</th>
                                <th scope="col">{% trans %}Telephone number{% endtrans %}</th>
                                <th scope="col" data-orderable="false">{% trans %}Function{% endtrans %}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for party_data in counterparties %}
                                <tr>
                                    <td>
                                        {{ party_data.party.name|e }}
                                        {% if party_data.party.isUnderAddressProtection %}
                                            <p id="partyIsUnderAddressProtectionCaseShow">!{% trans %}Is under address protection{% endtrans %}!</p>
                                        {% endif %}
                                    </td>
                                    <td>{{ party_data.type|e }}</td>
                                    <td>{{ party_data.party.address|e }}</td>
                                    <td>{{ party_data.party.identification.identifier|e }}</td>
                                    <td>{{ party_data.party.identification.pNumber|e }}</td>
                                    <td>{{ party_data.party.phoneNumber|e }}</td>
                                    <td class="text-right">
                                        <!-- Edit button -->
                                        <a href="{{ url("party_edit", {id: case.id, party_id: party_data.party.id}) }}" role="button" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="{% trans %}Edit party{% endtrans %}"><i class="fas fa-file-alt"></i><span class="sr-only">{% trans %}Edit party{% endtrans %} </span></a>

                                        <!-- Delete button -->

                                        <form id="myform" class="btn" style="margin:0; padding:0; display:inline;" method="post" action="{{ path('party_delete', {'id': case.id, 'party_id': party_data.party.id}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ party_data.party.id) }}">
                                            <button class="btn btn-danger" data-toggle="tooltip" data-placement="auto" title="{% trans %}Delete party{% endtrans %}"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
