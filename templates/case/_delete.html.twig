{% trans_default_domain 'case' %}

<div class="modal fade" id="delete_case">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignCaseworkerModalLabel">{% trans %}Delete case{% endtrans %}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            {{ form_start(delete_form, {'action': path('case_delete', {'id': case.id})}) }}
            <div class="modal-body">
                {{ form_widget(delete_form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{% trans %}Cancel{% endtrans %}</button>
                <button type="submit" class="btn btn-danger">{% trans %}Confirm deletion{% endtrans %}</button>
            </div>
            {{ form_end(delete_form) }}
        </div>
    </div>
</div>
