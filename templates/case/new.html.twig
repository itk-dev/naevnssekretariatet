{% extends 'layout.html.twig' %}

{% trans_default_domain 'case' %}

{% form_theme form _self %}

{% use 'bootstrap_4_layout.html.twig' with checkbox_widget as base_checkbox_widget %}

{% block title %}{% trans %}Create new Case{% endtrans %}{% endblock %}

{% block header %}
    <div class="row">
        <div class="col">
            <h1>{% trans %}Create new Case{% endtrans %}</h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <main role="main" class="col-12">
        {{ form_start(form) }}
        {{ form_rest(form) }}
        <button class="btn btn-success float-right" type="submit" name="submit">{% trans %}Create case{% endtrans %}</button>
        {{ form_end(form) }}
    </main>
{% endblock %}

{% block checkbox_widget %}
    {{ block('base_checkbox_widget') }}
    <p id="{{ form.vars.name }}" style="visibility: hidden">
        <span class="badge badge-pill badge-danger" title="{% trans from 'case' %}Is under address protection{% endtrans %}">!</span>
        {% trans from 'case' %}Is under address protection{% endtrans %}
    </p>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('case_new') }}
    {{ encore_entry_script_tags('identification-lookup') }}
    {{ encore_entry_script_tags('dawa-address-lookup') }}
{% endblock %}
