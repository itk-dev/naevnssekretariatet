{% extends 'layout-with-case-submenu.html.twig' %}

{% trans_default_domain 'case' %}

{% block title %}{% trans %}Case presentation{% endtrans %}{% endblock %}

{% block header %}
    <div class="row">
        <div class="col">
            <h1>{% trans %}Case presentation{% endtrans %}</h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <main role="main" class="col-12 mt-3">
        {{ form_start(case_presentation_form) }}
        {{ form_rest(case_presentation_form) }}
        <button class="btn btn-primary float-end">{{ button_label|default('Update proposal'|trans([], 'case', 'da')) }}</button>
        {{ form_end(case_presentation_form) }}
    </main>
{% endblock %}
