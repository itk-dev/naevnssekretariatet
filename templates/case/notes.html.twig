{% extends 'layout-with-submenu.html.twig' %}

{% block title %}{% trans %}Notes{% endtrans %}{% endblock %}

{% block header %}
  <div class="row">
    <div class="col">
      <h1>{% trans %}Notes{% endtrans %}</h1>
    </div>
  </div>
  {% include "common/case-status.html.twig" %}
{% endblock %}

{% block content %}

  <main role="main" class="col-12 mt-3">
    <section label="{% trans %}Create new note{% endtrans %}">
      <div class="card card-body">
        <div class="row">
          <div class="col">
            <h2 class="h5">Add a quick note</h2>
          </div>
          <div class="col-auto ml-auto">
            <button class="btn btn-outline-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="true" aria-controls="collapseExample">
              <span class="hide">{% trans %}Hide quick note{% endtrans %}</span>
              <span class="show">{% trans %}Show quick note{% endtrans %}</span>
            </button>
          </div>
        </div>
        <div class="collapse show" id="collapseExample">
          <form action="">
            <div class="form-group">
              <label for="">{% trans %}Subject{% endtrans %}</label>
              <input type="text" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
              <small id="helpId" class="form-text text-muted">{% trans %}Add a descriptive subject for ease of finding the note later on{% endtrans %}</small>
            </div>
            <div class="form-group">
              <label for="">{% trans %}Note content{% endtrans %}</label>
              <textarea class="form-control" name="" id="" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-success float-right">{% trans %}Save note{% endtrans %}</button>
          </form>
        </div>
      </div>
    </section>
    <section label="{% trans %}List of existion notes{% endtrans %}" class="mt-3">
      Accordion with notes
    </section>
  </main>
  <footer class="col-12 mt-3">
    <div class="row">
      <div class="col">
        <a name="" id="" class="btn btn-secondary" href="/case" role="button">{% trans %}Back to list{% endtrans %}</a>
      </div>
      <div class="col-auto ml-auto">
        {# TODO: Needs functionality on buttons #}
        <a name="" id="" class="btn btn-secondary" href="#" role="button">{% trans %}Move case{% endtrans %}</a>
        <a name="" id="" class="btn btn-danger" href="#" role="button">{% trans %}Delete case{% endtrans %}</a>
      </div>
    </div>
  </footer>
{% endblock %}
