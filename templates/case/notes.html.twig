{% extends 'layout-with-submenu.html.twig' %}

{% block title %}{% trans %}Notes{% endtrans %}{% endblock %}

{% block header %}
    <div class="row">
        <div class="col">
            <h1>{% trans %}Notes{% endtrans %}</h1>
        </div>
    </div>
{% endblock %}

{% block content %}

    <main role="main" class="col-12 mt-3">
        <section label="{% trans %}Create new note{% endtrans %}">
            <div class="card card-body">
                <div class="row">
                    <div class="col">
                        <h2 class="h5">Add a quick note</h2>
                    </div>
                    <div class="col-auto ml-auto">
                        <button class="btn btn-outline-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="true" aria-controls="collapseExample">
                            <span class="hide">{% trans %}Hide quick note{% endtrans %}</span>
                            <span class="show">{% trans %}Show quick note{% endtrans %}</span>
                        </button>
                    </div>
                </div>
                <div class="collapse show" id="collapseExample">
                    {{ form_start(note_form) }}
                    <div class="form-group">
                        <label >{% trans %}Subject{% endtrans %}</label>
                        {{ form_widget(note_form.subject, {'attr': {'type': 'text','class': 'form-control', 'aria-describedby': 'helpName'}}) }}
                        <small id="helpId" class="form-text text-muted">{% trans %}Add a descriptive subject for ease of finding the note later on{% endtrans %}</small>
                    </div>
                    <div class="form-group">
                        <label for="">{% trans %}Note content{% endtrans %}</label>
                        {{ form_widget(note_form.content, {'attr': {'type': 'textarea','class': 'form-control', 'rows': 3}}) }}
                    </div>
                    {{ form_widget(note_form.create, {'attr': {'class': 'btn btn-success float-right', 'type': 'submit'}}) }}
                    {{ form_rest(note_form) }}
                </div>
            </div>
        </section>
        <section label="{% trans %}List of existion notes{% endtrans %}" class="mt-3">

            {% set btn_group = [
                {
                    "name": "Edit note",
                    "style": "primary",
                    "icon": "edit",
                    "link": "#",
                    "tooltip": "Edit note",
                },
                {
                    "name": "Delete note",
                    "style": "danger",
                    "icon": "trash-alt",
                    "link": "#",
                    "tooltip": "Delete note",
                },
            ] %}

            <h2 class="h5">{% trans %}All notes{% endtrans %}</h2>
            <div class="accordion mt-3" id="accordionAllMessages">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <div class="row">
                            <div class="col">
                                <h2 class="m-0 p-0">
                                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        Sagsbehandler
                                    </button>
                                </h2>
                            </div>
                            <div class="col-auto ml-auto">
                                <p class="pt-2">Af Bruger Brugersen <span class="text-muted">sendt til</span> Part</p>
                            </div>
                            <div class="col-auto">
                                <p class="pt-2">01.01.2020 - 13:37</p>
                            </div>
                            <div class="col-auto">
                                {% include "common/btn_group.html.twig" with btn_group %}
                            </div>
                        </div>
                    </div>

                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionAllMessages">
                        <div class="card-body">
