{% extends 'layout.html.twig' %}

{% trans_default_domain 'case' %}

{% block title %}{% trans %}Cases{% endtrans %}{% endblock %}

{% block header %}
    <h1>{% trans %}Cases{% endtrans %}</h1>
    <div class="form-row align-items-center">
        {% for item in formselects %}
            <div class="form-group col">
                <label class="sr-only" for="{{ item.id|e }}">{{ item.label|e }}</label>
                <select class="form-control" name="{{ item.id|e }}" id="{{ item.id|e }}">
                    <option value="all">{{ item.name | trans([], 'case_index') }}</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                </select>
            </div>
        {% endfor %}
        <div class="form-group col-auto">
            <input name="reset" id="reset" class="btn btn-secondary" type="reset" value="Nulstil">
        </div>
    </div>
{% endblock %}

{% block content %}
    <main role="main" class="col-12">
        <div class="table-responsive-sm">
            <table id="casetable" class="table table-striped table-hover">
                <thead>
                <tr>
                    <th scope="col">{% trans %}Casenumber{% endtrans %}</th>
                    <th scope="col">{% trans %}Complaint category{% endtrans %}</th>
                    <th scope="col">{% trans %}Status{% endtrans %}</th>
                    <th scope="col">{% trans %}Deadline{% endtrans %}</th>
                    <th scope="col">{% trans %}Address{% endtrans %}</th>
                    <th scope="col">{% trans %}Landlord{% endtrans %}</th>
                    <th scope="col">{% trans %}Tenant{% endtrans %}</th>
                    <th scope="col" data-orderable="false">{% trans %}Function{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for case in cases %}
                    <tr class="{% if case.caseState == "submitted" %}table-primary{% endif %} ">
                        <td><a href="{{ url('case_summary', {id: case.id}) }}" data-toggle="tooltip" data-placement="auto" title="{% trans %}Show case{% endtrans %} {{ case.casenumber|e }}">{{ case.casenumber|e }}</a></td>
                        <td>{{ case.complaintCategory.name|e }}</td>
                        <td>{{ case.casestate|e }}</td>
                        <td>{{ "2. sep 2020"|e }}</td>
                        <td>{{ case.complainantAddress|e }}</td>
                        <td>{{ "Udlejer"|e }}</td>
                        <td>{{ case.complainant|e }}</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="{% trans %}List functions{% endtrans %}">
                                <a href="{{ url('case_summary', {id: case.id}) }}" role="button" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="{% trans %}Show case{% endtrans %}"><i class="fas fa-eye"></i><span class="sr-only">{% trans %}Show case{% endtrans %}</span></a>
                                <a href="#" role="button" class="btn btn-warning" data-toggle="tooltip" data-placement="auto" title="{% trans %}Add reminder{% endtrans %}"><i class="fas fa-clock"></i><span class="sr-only">{% trans %}Add reminder{% endtrans %}</span></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}