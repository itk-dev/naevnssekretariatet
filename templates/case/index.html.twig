{% extends 'layout.html.twig' %}

{% trans_default_domain 'case' %}

{% block title %}{% trans %}Cases{% endtrans %}{% endblock %}

{% block header %}
    <h1>{% trans %}Cases{% endtrans %}</h1>

    <div class="row">
        <div class="col-3">
            {{ form(municipality_form) }}
        </div>
    </div>
{% endblock %}

{% block content %}
    <main role="main" class="col-12">
        <form id="filter_form11" method="get" action="." class="form">
            {{ form_start(filter_form) }}
            <div class="row no-gutters">
                <div class="col-auto">
                    {{ form_widget(filter_form.board) }}
                </div>
                <div class="col-auto ml-2">
                    {{ form_widget(filter_form.currentPlace) }}
                </div>
                {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
                    <div class="col-auto ml-2">
                        {{ form_widget(filter_form.assignedTo) }}
                    </div>
                    <div class="col-auto ml-2">
                        {{ form_widget(filter_form.deadlines) }}
                    </div>
                    <div class="col-auto ml-2">
                        {{ form_widget(filter_form.specialStateFilter) }}
                    </div>
                {% endif %}
                <div class="col-auto ml-2">
                    {# Todo: Just reset filter rather than refresh page although it yields the same result #}
                    <a class="btn btn-secondary" href="{{ path('case_index') }}" role="button">{% trans %}Reset{% endtrans %}</a>
                </div>
            </div>
            {{ form_rest(filter_form) }}
        </form>

        <div id="js-process-spinner" class="spinner-border spinner-border-sm" style="display: none" role="status">
            <span class="sr-only">Loading</span>
        </div>

        <div class="table-responsive-sm mt-3 js-process-table-results">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th{% if pagination.isSorted('c.CaseNumber') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Casenumber'|trans({}, 'case'), 'c.caseNumber') }}
                    </th>
                    <th{% if pagination.isSorted('c.ComplaintCategory') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Complaint category'|trans({}, 'case'), 'complaintCategory.name') }}
                    </th>
                    <th{% if pagination.isSorted('c.currentPlace') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Status'|trans({}, 'case'), 'c.currentPlace') }}
                    </th>
                    {# Todo: Replace 'createdAt' with correct deadline when it is decided which one is the correct one #}
                    <th{% if pagination.isSorted('a.CreatedAt') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Deadline'|trans({}, 'case'), 'c.createdAt') }}
                    </th>
                    <th{% if pagination.isSorted('c.SortingAddress') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Address'|trans({}, 'case'), 'c.sortingAddress') }}
                    </th>
                    {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
                        <th{% if pagination.isSorted('c.SortingComplainant') %} class="sorted"{% endif %}>
                            {{ knp_pagination_sortable(pagination, 'Complainant'|trans({}, 'case'), 'c.sortingComplainant') }}
                        </th>
                        <th{% if pagination.isSorted('c.SortingCounterparty') %} class="sorted"{% endif %}>
                            {{ knp_pagination_sortable(pagination, 'Counterparty'|trans({}, 'case'), 'c.sortingCounterparty') }}
                        </th>
                    {% endif %}
                    <th scope="col" data-orderable="false">{% trans %}Function{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for case in pagination %}
                    <tr>
                        <td><a href="{{ url('case_summary', {id: case.id}) }}" data-toggle="tooltip" data-placement="auto" title="{% trans %}Show case{% endtrans %} {{ case.casenumber|e }}">{{ case.casenumber|e }}</a></td>
                        <td>{{ case.complaintCategory.name|e }}</td>
                        <td>{{ case.currentPlace|e }}</td>
                        {# Todo: Replace with correct deadline when it is decided which one is the correct one #}
                        <td>{{ case.createdAt|date('d/m/Y') }}</td>
                        <td>{{ case.sortingAddress|e }}</td>
                        {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
                            <td>{{ case.sortingComplainant|e }}</td>
                            <td>{{ case.sortingCounterparty|e }}</td>
                        {% endif %}
                        <td>
                            <div class="btn-group" role="group" aria-label="{% trans %}List functions{% endtrans %}">
                                {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
                                    <!-- Assign button -->
                                    <a role="button" class="btn btn-success" data-toggle="modal" data-target="#assign_case{{ case.id }}" data-placement="auto" title="{% trans %}Assign caseworker{% endtrans %}"><i class="fas fa-user-plus"></i><span class="sr-only">{% trans %}Assign caseworker{% endtrans %}</span></a>
                                    <!-- Reminder button -->
                                    <a role="button" class="btn btn-warning" data-toggle="modal" data-target="#reminder_new{{ case.id }}" data-placement="auto" title="{% trans %}Add reminder{% endtrans %}"><i class="fas fa-clock"></i><span class="sr-only">{% trans %}Add reminder{% endtrans %}</span></a>
                                {% endif %}
                                <!-- Show case button -->
                                <a href="{{ url('case_summary', {id: case.id}) }}" role="button" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="{% trans %}Show case{% endtrans %}"><i class="fas fa-eye"></i><span class="sr-only">{% trans %}Show case{% endtrans %}</span></a>
                            </div>
                        </td>
                    </tr>
                    {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
                        {{ render(controller('App\\Controller\\CaseReminderController:new', {id: case.id})) }}
                        {{ render(controller('App\\Controller\\CaseController:assignCaseworker', {id: case.id})) }}
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('agenda_filter') }}
    {{ encore_entry_script_tags('municipality_select') }}
{% endblock %}
