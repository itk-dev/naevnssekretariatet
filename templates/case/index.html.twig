{% extends 'layout.html.twig' %}

{% trans_default_domain 'case' %}

{% block title %}{% trans %}Cases{% endtrans %}{% endblock %}

{% block header %}
    <h1>{% trans %}Cases{% endtrans %}</h1>

    <div class="row">
        <div class="col-3">
            {{ form(municipality_form) }}
        </div>
    </div>
    <div class="form-row align-items-center">
        {% for item in formselects %}
            <div class="form-group col">
                <label class="sr-only" for="{{ item.id|e }}">{{ item.label|e }}</label>
                <select class="form-control" name="{{ item.id|e }}" id="{{ item.id|e }}">
                    <option value="all">{{ item.name|trans([], 'case', 'da') }}</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                </select>
            </div>
        {% endfor %}
        <div class="form-group col-auto">
            <input name="reset" id="reset" class="btn btn-secondary" type="reset" value="Nulstil">
        </div>
    </div>
{% endblock %}

{% block content %}
    <main role="main" class="col-12">
        <form id="filter_form11" method="get" action="." class="form">
            {{ form_start(filter_form) }}
            <div class="row no-gutters">
                <div class="col-auto">
                    {{ form_widget(filter_form.board) }}
                </div>
                <div class="col-auto ml-2">
                    {{ form_widget(filter_form.currentPlace) }}
                </div>
                <div class="col-auto ml-2">
                    {{ form_widget(filter_form.assignedTo) }}
                </div>
{#                <div class="col-auto ml-2">#}
{#                    {{ form_widget(filter_form.date) }}#}
{#                </div>#}
{#                <div class="col-auto ml-2">#}
{#                    {{ form_widget(filter_form.status) }}#}
{#                </div>#}
                <div class="col-auto ml-2">
                    {# Todo: Just reset filter rather than refresh page although it yields the same result #}
                    <a name="" id="" class="btn btn-secondary" href="{{ path('agenda_index') }}" role="button">{% trans %}Reset{% endtrans %}</a>
                </div>
            </div>
            {{ form_rest(filter_form) }}
        </form>

        <div id="js-process-spinner" class="spinner-border spinner-border-sm" style="display: none" role="status">
            <span class="sr-only">Loading</span>
        </div>

        <div class="table-responsive-sm mt-3 js-process-table-results">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th scope="col">{% trans %}Casenumber{% endtrans %}</th>
                    <th scope="col">{% trans %}Complaint category{% endtrans %}</th>
                    <th scope="col">{% trans %}Status{% endtrans %}</th>
                    <th scope="col">{% trans %}Deadline{% endtrans %}</th>
                    <th scope="col">{% trans %}Address{% endtrans %}</th>
                    <th scope="col">{% trans %}Landlord{% endtrans %}</th>
                    <th scope="col">{% trans %}Tenant{% endtrans %}</th>
                    <th scope="col" data-orderable="false">{% trans %}Function{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for case in pagination %}
                    <tr>
                        <td><a href="{{ url('case_summary', {id: case.id}) }}" data-toggle="tooltip" data-placement="auto" title="{% trans %}Show case{% endtrans %} {{ case.casenumber|e }}">{{ case.casenumber|e }}</a></td>
                        <td>{{ case.complaintCategory.name|e }}</td>
                        <td>{{ case.currentPlace|e }}</td>
                        <td>{{ "2. sep 2020"|e }}</td>
                        <td>{{ case.complainantAddress|e }}</td>
                        <td>{{ "Udlejer"|e }}</td>
                        <td>{{ case.complainant|e }}</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="{% trans %}List functions{% endtrans %}">
                                <a href="" role="button" class="btn btn-success" data-toggle="modal" data-target="#assign_case{{ case.id }}" data-placement="auto" title="{% trans %}Assign caseworker{% endtrans %}"><i class="fas fa-user-plus"></i><span class="sr-only">{% trans %}Assign caseworker{% endtrans %}</span></a>
                                <a href="" role="button" class="btn btn-warning" data-toggle="modal" data-target="#reminder_new{{ case.id }}" data-placement="auto" title="{% trans %}Add reminder{% endtrans %}"><i class="fas fa-clock"></i><span class="sr-only">{% trans %}Add reminder{% endtrans %}</span></a>
                                <a href="{{ url('case_summary', {id: case.id}) }}" role="button" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="{% trans %}Show case{% endtrans %}"><i class="fas fa-eye"></i><span class="sr-only">{% trans %}Show case{% endtrans %}</span></a>
                            </div>
                        </td>
                    </tr>
                    {{ render(controller('App\\Controller\\CaseReminderController:new', {id: case.id})) }}
                    {{ render(controller('App\\Controller\\CaseController:assignCaseworker', {id: case.id})) }}
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('agenda_filter') }}
    {{ encore_entry_script_tags('municipality_select') }}
{% endblock %}
