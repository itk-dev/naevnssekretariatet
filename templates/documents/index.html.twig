{% extends 'layout-with-case-submenu.html.twig' %}

{% trans_default_domain 'documents' %}

{% block title %}{% trans %}Documents{% endtrans %}{% endblock %}

{% block header %}
    <div class="row">
        <div class="col">
            <h1>{% trans %}Documents{% endtrans %}</h1>
        </div>
        {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
            <div class="col-auto">
                <a class="btn btn-success" href="create" role="button">{% trans %}Upload document{% endtrans %}</a>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block content %}
    <main role="main" class="col-12 mt-3">
        <div class="table-responsive-sm"></div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{% trans %}Document name{% endtrans %}</th>
                <th>{% trans %}Original file name{% endtrans %}</th>
                <th>{% trans %}Document type{% endtrans %}</th>
                <th>{% trans %}Uploaded by{% endtrans %}</th>
                <th>{% trans %}Upload date{% endtrans %}</th>
                {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
                    <th class="text-right">{% trans %}Functions{% endtrans %}</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for document in documents %}
                <tr>
                    <td>{{ document.documentName|e }}</td>
                    <td>{{ document.originalFileName|e }}</td>
                    <td>{{ document.type|trans([], 'mail_template') }}</td>
                    <td>{{ document.uploadedBy|e }}</td>
                    <td>{{ document.uploadedAt|date(format_date) }}</td>
                    {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
                        <td class="text-right">
                            <!-- Edit button -->
                            <a href="{{ url("document_edit", {id: case.id, document: document.id}) }}" role="button" class="btn btn-success" data-toggle="tooltip" data-placement="auto" title="{% trans %}Edit document{% endtrans %}"><i class="fas fa-edit"></i><span class="sr-only">{% trans %}Edit document{% endtrans %} </span></a>

                            <!-- Copy button -->
                            <a href="{{ url("document_copy", {id: case.id, document_id: document.id}) }}" role="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="auto" title="{% trans %}Copy document to another case{% endtrans %}"><i class="fas fa-copy"></i><span class="sr-only">{% trans %}Copy document to another case{% endtrans %} </span></a>

                            <!-- View button -->
                            <a href="{{ url("document_view", {id: case.id, document_id: document.id}) }}" role="button" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="{% trans %}View document{% endtrans %}"><i class="fas fa-eye"></i><span class="sr-only">{% trans %}View document{% endtrans %} </span></a>

                            <!-- Delete button -->
                            <form id="myform" style="margin:0; padding:0" class="btn" method="post" action="{{ path('document_delete', {'id': case.id, 'document_id': document.id}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
                                <button class="btn btn-danger ml" data-toggle="tooltip" data-placement="auto" title="{% trans %}Delete document{% endtrans %}"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}
