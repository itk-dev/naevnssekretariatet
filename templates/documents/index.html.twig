{% extends 'layout-with-case-submenu.html.twig' %}

{% trans_default_domain 'documents' %}

{% block title %}{% trans %}Documents{% endtrans %}{% endblock %}

{% block header %}
    <div class="row">
        <div class="col">
            <h1>{% trans %}Documents{% endtrans %}</h1>
        </div>
        {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
            <div class="col-auto">
                <a class="btn btn-success" href="create" role="button">{% trans %}Upload document{% endtrans %}</a>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% macro pagination_header(documents, property, text) %}
    <th class="{{ documents.isSorted(property) ? 'sorted' }}">
        {{ knp_pagination_sortable(documents, text, property) }}
    </th>
{% endmacro %}

{% block content %}
    <main role="main" class="col-12 mt-3">
        {{ form_start(filter_form) }}
            <div class="row no-gutters">
                <div class="col-auto">
                    {{ form_widget(filter_form.query) }}
                </div>
                <div class="col-auto ml-2">
                    {{ form_widget(filter_form.type) }}
                </div>
                <div class="col-auto ml-2">
                    <button class="btn btn-primary">{% trans %}Apply filter{% endtrans %}</button>

                    {# Get query parameters without filter #}
                    {% set query_parameters = app.request.query.all|filter((v, k) => k != 'document_filter') %}
                    {% set reset_filter_path = path(
                        app.request.attributes.get('_route'),
                        app.request.attributes.get('_route_params')|merge(query_parameters)
                        ) %}
                    <a class="btn btn-secondary" href="{{ reset_filter_path }}" role="button">{% trans %}Reset filter{% endtrans %}</a>
                </div>
            </div>
            {{ form_rest(filter_form) }}
        {{ form_end(filter_form) }}

        <div class="table-responsive-sm mt-3">
            <table class="table table-striped">
                <thead>
                    <tr>
                        {{ _self.pagination_header(documents, 'd.documentName', 'Document name'|trans) }}
                        {{ _self.pagination_header(documents, 'd.originalFileName', 'Original file name'|trans) }}
                        {{ _self.pagination_header(documents, 'd.type', 'Document type'|trans) }}
                        <th>{% trans %}Uploaded by{% endtrans %}</th>
                        {{ _self.pagination_header(documents, 'd.uploadedAt', 'Upload date'|trans) }}
                        {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
                            <th class="text-right">{% trans %}Functions{% endtrans %}</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for document in documents %}
                        <tr>
                            <td>{{ document.documentName|e }}</td>
                            <td>
                                {% if document.isCreatedManually %}
                                    {{ document.originalFileName|e }}
                                {% endif %}
                            </td>
                            <td>{{ document.type|trans([], 'mail_template') }}</td>
                            <td>{{ document.uploadedBy|e }}</td>
                            <td>{{ document.uploadedAt|date(format_date) }}</td>
                            {% if is_granted('ROLE_CASEWORKER') or is_granted('ROLE_ADMINISTRATION') %}
                                <td class="text-right">
                                    <!-- Edit button -->
                                    <a href="{{ url("document_edit", {id: case.id, document: document.id}) }}" role="button" class="btn btn-success" data-toggle="tooltip" data-placement="auto" title="{% trans %}Edit document{% endtrans %}"><i class="fas fa-edit"></i><span class="sr-only">{% trans %}Edit document{% endtrans %} </span></a>

                                    <!-- Copy button -->
                                    <a href="{{ url("document_copy", {id: case.id, document_id: document.id}) }}" role="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="auto" title="{% trans %}Copy document to another case{% endtrans %}"><i class="fas fa-copy"></i><span class="sr-only">{% trans %}Copy document to another case{% endtrans %} </span></a>

                                    <!-- View button -->
                                    <a href="{{ url("document_view", {id: case.id, document_id: document.id}) }}" role="button" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="{% trans %}View document{% endtrans %}"><i class="fas fa-eye"></i><span class="sr-only">{% trans %}View document{% endtrans %} </span></a>

                                    <!-- Delete button -->
                                    <!-- Note: Document is NOT deletable if it has been sent via digital post, or it is attached to an agenda item -->
                                    {% if isDocumentDeletable(document, case) %}
                                        <a href="" role="button" class="btn btn-danger" data-toggle="modal" data-target="#delete_document" data-placement="auto" title="{% trans %}Delete document{% endtrans %}"><i class="fas fa-trash-alt"></i></a>
                                        {{ render(controller('App\\Controller\\DocumentController:delete', {id: case.id, document_id: document.id})) }}
                                    {% else %}
                                        <button class="btn btn-danger" disabled data-toggle="tooltip" data-placement="auto" title="{% trans %}Cannot delete document that has been sent or is attached to an agenda{% endtrans %}"><i class="fas fa-trash-alt"></i></button>
                                    {% endif %}
                                </td>
                            {% endif %}
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">{% trans %}No documents found{% endtrans %}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}
