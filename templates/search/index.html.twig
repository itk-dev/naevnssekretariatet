{% extends 'layout.html.twig' %}

{% trans_default_domain 'search' %}

{% block title %}{% trans %}Search{% endtrans %}{% endblock %}

{% block header %}
    <div class="row">
        <div class="col">
            <h1>{% trans %}Search results{% endtrans %}</h1>
            <p class="text-muted"><small>{% trans %}You can search for case number, address or parts of an address.{% endtrans %}</small></p>
        </div>
    </div>
{% endblock %}

{% block content %}
<main role="main" class="col-12 mt-3">
    {% if pagination.getTotalItemCount %}
        <div class="table-responsive-sm mt-3 js-process-table-results">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th{% if pagination.isSorted('c.CaseNumber') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Casenumber'|trans({}, 'case'), 'c.caseNumber') }}
                    </th>
                    <th{% if pagination.isSorted('c.ComplaintCategory') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Complaint category'|trans({}, 'case'), 'complaintCategory.name') }}
                    </th>
                    <th{% if pagination.isSorted('c.currentPlace') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Status'|trans({}, 'case'), 'c.currentPlace') }}
                    </th>
                    <th{% if pagination.isSorted('c.SortingAddress') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Address'|trans({}, 'case'), 'c.sortingAddress') }}
                    </th>
                    <th{% if pagination.isSorted('c.SortingComplainant') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Complainant'|trans({}, 'case'), 'c.sortingComplainant') }}
                    </th>
                    <th{% if pagination.isSorted('c.SortingCounterparty') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(pagination, 'Counterparty'|trans({}, 'case'), 'c.sortingCounterparty') }}
                    </th>
                    <th scope="col" data-orderable="false">{{ 'Function'|trans({}, 'case') }}</th>
                </tr>
                </thead>
                <tbody>
                {% for case in pagination %}
                    <tr>
                        <td><a href="{{ url('case_summary', {id: case.id}) }}" data-toggle="tooltip" data-placement="auto" title="{{ 'Show case'|trans({}, 'case') }} {{ case.casenumber|e }}">{{ case.casenumber|e }}</a></td>
                        <td>{{ case.complaintCategory.name|e }}</td>
                        <td>{{ case.currentPlace|e }}</td>
                        <td>{{ case.sortingAddress|e }}</td>
                        <td>{{ case.sortingComplainant|e }}</td>
                        <td>{{ case.sortingCounterparty|e }}</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="{{ 'List functions'|trans({}, 'case') }}">
                                <a href="" role="button" class="btn btn-success" data-toggle="modal" data-target="#assign_case{{ case.id }}" data-placement="auto" title="{{ 'Assign caseworker'|trans({}, 'case') }}"><i class="fas fa-user-plus"></i><span class="sr-only">{{ 'Assign caseworker'|trans({}, 'case') }}</span></a>
                                <a href="" role="button" class="btn btn-warning" data-toggle="modal" data-target="#reminder_new{{ case.id }}" data-placement="auto" title="{{ 'Add reminder'|trans({}, 'case') }}"><i class="fas fa-clock"></i><span class="sr-only">{{ 'Add reminder'|trans({}, 'case') }}</span></a>
                                <a href="{{ url('case_summary', {id: case.id}) }}" role="button" class="btn btn-primary" data-toggle="tooltip" data-placement="auto" title="{{ 'Show case'|trans({}, 'case') }}"><i class="fas fa-eye"></i><span class="sr-only">{{ 'Show case'|trans({}, 'case') }}</span></a>
                            </div>
                        </td>
                    </tr>
                    {{ render(controller('App\\Controller\\CaseReminderController:new', {id: case.id})) }}
                    {{ render(controller('App\\Controller\\CaseController:assignCaseworker', {id: case.id})) }}
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    {% else %}
            {{ 'No results for %search%'|trans({'%searchTerm%': search}, 'search') }}
    {% endif %}
</main>
{% endblock %}
